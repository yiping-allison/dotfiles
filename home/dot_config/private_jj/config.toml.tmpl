[user]
name = {{ .name | quote }}
email = {{ .email | quote }}

[ui]
default-command = "log"
color = "always"
editor = "nvim"
paginate = "auto"
pager = "delta"
diff-formatter = "delta"
conflict-marker-style = "git"
log-word-wrap = true

[merge-tools.delta]
# Silence 0 and 1 exit codes when using `delta`
diff-expected-exit-codes = [0, 1]

[templates]
log = "builtin_log_compact"
