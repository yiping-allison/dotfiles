{{- if eq .chezmoi.hostname "fir" }}
# ! NOTE: The display number should be the same one generated by `xwayland-satellite`.
# Technically this is set in niri config, but I also need to add it here since
# I launch VSCode from the terminal.
code () {
  (firejail --quiet --env=DISPLAY=:1 /usr/bin/codium "$@" & disown) > /dev/null 2>&1
}
{{- else }}
code () {
  (firejail --quiet /usr/bin/codium "$@" & disown) > /dev/null 2>&1
}
{{- end }}
